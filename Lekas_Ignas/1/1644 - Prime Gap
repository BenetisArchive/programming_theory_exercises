num_array=list()
start=0
end=0

def ArPirminis(n):
    for i in range(2, n/2+1):
        if (n%i==0):
            return False
    
    return True
    
def RastiRibas(n):
    start=n
    end = n
    if (ArPirminis(n=int(n))):
        return 0
    while True:
        start = start-1
        if (ArPirminis(n=int(start))):
            break

    while True:
        end =end+1
        if (ArPirminis(n=int(end))):
            break
    
    return end-start


while True:
    n = raw_input("Iveskite norimus skaicius, baige iveskite 0:")
    if n.strip() != '0':
        num_array.append(RastiRibas(n=int(n)))
              
    if n.strip() == '0':
        break
        
print num_array